{% set main_menu %}
    {{ knp_menu_render('main', {'template': 'themes/sidebarnemu.html.twig', 'allow_safe_labels': true, 'currentClass': 'uk-active'})|raw }}
{% endset %}
<!DOCTYPE html>
<html lang="en-EN">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ title }}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/uikit.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/fontawesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/tests.min.css') }}">
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('js/uikit.min.js') }}"></script>
    {% endblock %}
</head>
<body>
{% block body %}
    <div class="uk-container-expand uk-flex" data-uk-grid>

        {% block left_sidebar %}
            <div class="left-sidebar uk-width-1-6@s uk-visible@s ">
{#                {% block  sidebar_logo %}#}
{#                    <div class="sidebar-logo">#}
{#                        <a class="my-logo" href="{{ path('homepage') }}">wweg</a>#}
{#                    </div>#}
{#                {% endblock %}#}
                <div class="uk-navbar-right"
                <h3 class="uk-margin-remove-bottom ">
                    {{ app.user }}
                </h3>
            </div>
                {% block sidebar_menu %}
                    <div class="sidebar-menu uk-card uk-shadow-3d-dark-plus">
                        <div class="uk-card-header uk-background-full-secondary uk-box-shadow-small-b">
                            <h4>Categories</h4>
                        </div>
                        <div class="uk-card-body uk-background-dark-plus uk-padding-small">
                        {{ main_menu }}
                        </div>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="sidebar-menu">
                            <ul class="uk-nav-default uk-nav-parent-icon uk-nav" data-uk-nav>
                                <li class="first"><a href="/admin/category"> <i class="fas fa-user-alt"></i> Admin</a>
                                </li>
                            </ul>
                        </div>
                    {% endif %}
                {% endblock %}
            </div>
        {% endblock %}
        <div class="content uk-width-expand@s">
            {% block content %}

            {% endblock %}
        </div>
        <div class="left-sidebar uk-width-1-6@s uk-visible@m">
        </div>
    </div>
{% endblock %}
</body>
</html>
