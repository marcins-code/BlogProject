{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Parent</th>
                <th>Parent</th>
                <th>Created By</th>
                <th>Created</th>
                <th>Modified</th>
                <th>IsEnabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.category }}</td>
                <td>{{ category.parent }}</td>
                <td>{{ (category.children.count) }}</td>
                <td>{{ category.createdBy }}</td>
                <td>{{ category.createdAt ? category.createdAt|date('d-m-Y') : '' }}</td>
                <td>{{ category.modifiedAt ? category.modifiedAt|date('d-m-Y') : '' }}</td>
                <td>{{ category.isEnabled ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}
