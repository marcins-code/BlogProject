{% extends 'form_base.html.twig' %}
    {% block content %}
        <h1 class="uk-text-primary uk-text-bold">{{ title }}</h1>
        {{ form_start(form) }}
        <div class="uk-flex uk-margin-large-bottom uk-padding-small" data-uk-grid>
            <div class="uk-width-1-6@l uk-flex-first uk-form-buttons ">
                <div class="uk-card  uk-shadow-3d-dark-plus uk-margin-medium-top" data-uk-sticky>
                    <div class="uk-card-body">
                        {{ form_row(form.save) }}
                        {{ form_row(form.save_exit) }}
                        {{ form_row(form.save_new) }}
                        <a class="uk-button uk-button-danger" href="{{ path('article_index') }}"><i
                                    class="far fa-times-circle"></i> Exit</a>
                    </div>
                </div>
            </div>
            <div class="uk-width-expand@m ">

                <div data-uk-grid>
                    <div class="uk-width-expand">
                        {{ form_row(form.title) }}
                    </div>
                    <div class="uk-width-1-6">
                        {{ form_row(form.category) }}
                    </div>
                    <div class="uk-width-1-6">
                        {{ form_row(form.type) }}
                    </div>
                    <div class="uk-width-1-6">
                        {{ form_row(form.isPublished) }}
                    </div>
                </div>

                <div data-uk-grid>
                    <div class="uk-width-expand@m">
                        {{ form_row(form.content) }}
                    </div>
                    <div class="uk-width-1-4@m">
                        {{ form_row((form.moviePath)) }}
                        {{ form_row((form.movies)) }}
                        {% if repo is defined %}
                            {% for movie in repo.movies %}
                                <video src="/movies/{{ repo.moviePath }}/{{ movie }}.mp4" controls
                                       data-uk-video="autoplay: false" class="uk-margin-small-bottom"></video>
                            {% endfor %}
                        {% endif %}
                    </div>

                </div>
            </div>
        </div>


        {{ form_end(form) }}
    {% endblock %}
  {% block right_sidebar %}
  {% endblock %}